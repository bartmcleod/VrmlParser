#VRML V2.0 utf8

# This file serves to test whether a creaseAngle in an IndexedFaceSet is respected during rendering.

NavigationInfo {

}


Viewpoint {
    fieldOfView    1
    jump           TRUE
    orientation    0 0 1 0
    position       0 0 10

    description    "Default"
}

DirectionalLight {
    ambientIntensity  0
    color             1 1 0.9
    direction         0.5 -1.5 -1
    intensity         1.8
    on                TRUE
}

DirectionalLight {
    ambientIntensity  0
    color             1 1 0.9
    direction         -0.5 1 1
    intensity        1
    on                TRUE
}

Transform {
	# a comment about the transform node
	children [
		Shape {
            appearance Appearance {
                material Material {
                  diffuseColor 1 1 0
                }
            }
            geometry IndexedFaceSet {
                creaseAngle 0.5
                coord  Coordinate {
                    point [
                        # points for square (frontal)
                        0 0 0, #0
                        0 1 0,
                        1 1 0,
                        1 0 0, #3

                        # extra points for side square
                        1 1 1,
                        1 0 1, #5

                        # extra points for another (almost) square, with a small crease angle compared to the first square
                        -1 1 0.1,
                        -1 0 0.1, #7

                        # for testing, double the set of extra points, to be able to make extra edges
                        1 1 0,
                        1 0 0, #9
                    ]
                }
                normal            NULL
                solid FALSE

                ccw               FALSE
                coordIndex  [
                    # first square
                    0, 1, 2, 3, -1,

                    # second square, large crease angle
                    #9, 5, 4, 8, -1,
                    3, 5, 4, 2, -1,

                    # thrid (almost) square, small crease angle compared to first (center) square
                    1, 0, 7, 6, -1,
                ]
            }
        }
	]
}

